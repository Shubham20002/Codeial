<h1>codeial home page render from ejs</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <form action="/post/create" id="new-post-form" method="post">
        <textarea name="content" cols="30" rows="10" placeholder="add post.."></textarea>
        <input type="submit" value="Post">
        <style>
            #post-list-container {
                border: 2px solid red;
            }

            #post {
                border: 2px solid black;
            }
        </style>
    </form>

    <div id="post-list-container">
        <ul>
            <% for(post of posts){%>

                <li id="post">
                    <p>
                        <% if(locals.user.id == post.user.id){%>
                        <small>
                            <a href="/post/destroy/<%=post.id%>">Delete post</a>
                        </small>
                        <%}%>
                        <%= post.content %>
                            <br>
                            <small>
                                <%= post.user.name%>
                            </small>
                    </p>
                    <div class="post-comments">
                        <form action="comments/create" method="post">
                            <input type="text" name="content" placeholder="Type Here to add comments...">
                            <input type="hidden" name="post" value="<%=post._id%>">
                            <input type="submit" value="Add Comment">
                        </form>
                        <div class="post_comment_list">
                            <h1>comments on post</h1>
                            <ul id="post-comments-<%=post._id%>">
                                <% for(comment of post.comments){%>
                                    <p>
                                        <%= comment.content%>
                                            <br>
                                            <small>
                                                <%= comment.user.name%>
                                            </small>
                                    </p>
                                    <%}%>
                            </ul>
                        </div>
                    </div>
                </li>
                <%}%>
        </ul>
    </div>
</section>